void setup()
{
    Wire.begin();
    lcd.init();
    lcd.clear(0, 0);
    lcd.clearBuffer();
    
    lcd.setFont(z_font_5x8); 

    lcd.drawText(1,50, "LCD test of displaying BMP ");
    lcd.sendBuffer(); // push buffer data to CGRAM
    lcd.setBL_on();
    delay(2000);

}

void loop()
{
    lcd.clear(0,0);
    lcd.clearBuffer();
    lcd.drawBitmap(1,1,84,48,(uint8_t*)bitmapArray,1);
    lcd.sendBuffer();
    return;
}